<Window
    x:Class="Task_03.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Task_03"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="310"
    Height="500"
    mc:Ignorable="d">
    <StackPanel>
        <Path Fill="Red" Stroke="Black">
            <Path.Data>
                <LineGeometry StartPoint="100,20" EndPoint="200,60" />
            </Path.Data>
        </Path>
        <Path Fill="LightBlue" Stroke="Black">
            <Path.Data>
                <RectangleGeometry Rect="100,20,100,50" />
            </Path.Data>
        </Path>
        <Path Fill="LightPink" Stroke="Black">
            <Path.Data>
                <RectangleGeometry
                    RadiusX="10"
                    RadiusY="10"
                    Rect="100,20,100,50" />
            </Path.Data>
        </Path>
        <Path Fill="Yellow" Stroke="Black">
            <Path.Data>
                <EllipseGeometry
                    Center="150,40"
                    RadiusX="50"
                    RadiusY="25" />
            </Path.Data>
        </Path>
        <Path Fill="LawnGreen" Stroke="Black">
            <Path.Data>
                <GeometryGroup FillRule="Nonzero">
                    <EllipseGeometry
                        Center="130,40"
                        RadiusX="50"
                        RadiusY="25" />
                    <EllipseGeometry
                        Center="170,40"
                        RadiusX="50"
                        RadiusY="25" />
                </GeometryGroup>
            </Path.Data>
        </Path>
    </StackPanel>
</Window>

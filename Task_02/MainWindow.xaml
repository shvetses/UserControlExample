<Window
    x:Class="Task_02.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Task_02"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="800"
    mc:Ignorable="d">
    <UniformGrid Rows="6">
        <Rectangle
            Width="100"
            Height="30"
            Fill="LightBlue"
            Stroke="Blue">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="45" />
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle
            Width="100"
            Height="30"
            Fill="LightBlue"
            Stroke="Blue">
            <Rectangle.RenderTransform>
                <TranslateTransform X="20" Y="-30" />
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle
            Width="100"
            Height="30"
            Fill="LightBlue"
            Stroke="Blue">
            <Rectangle.RenderTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle
            Width="100"
            Height="30"
            Fill="LightBlue"
            Stroke="Blue">
            <Rectangle.RenderTransform>
                <SkewTransform AngleX="45" />
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle
            Width="100"
            Height="30"
            Fill="LightBlue"
            Stroke="Blue">
            <Rectangle.RenderTransform>
                <MatrixTransform Matrix="1 0 1 2 1 -3" />
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle
            Width="100"
            Height="30"
            Fill="LightBlue"
            Stroke="Blue">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="45" />
                    <TranslateTransform X="30" Y="-40" />
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
    </UniformGrid>
</Window>

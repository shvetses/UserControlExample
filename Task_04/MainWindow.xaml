<Window
    x:Class="Task_04.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Task_04"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="500"
    mc:Ignorable="d">
    <Window.Resources>
        <RectangleGeometry x:Key="rect" Rect="0 0 100 70" />

        <EllipseGeometry
            x:Key="ellipse"
            Center="85 50"
            RadiusX="40"
            RadiusY="40" />

        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Verdana" />
        </Style>
        <Style TargetType="Path">
            <Setter Property="Margin" Value="10" />
            <Setter Property="Fill" Value="Green" />
            <Setter Property="Stroke" Value="Black" />
        </Style>

    </Window.Resources>

    <UniformGrid Columns="2" Rows="4">
        <!--  Union  -->
        <Path>
            <Path.Data>
                <CombinedGeometry
                    Geometry1="{StaticResource rect}"
                    Geometry2="{StaticResource ellipse}"
                    GeometryCombineMode="Union" />
            </Path.Data>
        </Path>
        <TextBlock Grid.Row="0" Grid.Column="1">Union</TextBlock>

        <!--  Intersect  -->
        <Path>
            <Path.Data>
                <CombinedGeometry
                    Geometry1="{StaticResource rect}"
                    Geometry2="{StaticResource ellipse}"
                    GeometryCombineMode="Intersect" />
            </Path.Data>
        </Path>
        <TextBlock Grid.Row="1" Grid.Column="1">Intersect</TextBlock>

        <!--  Xor  -->
        <Path>
            <Path.Data>
                <CombinedGeometry
                    Geometry1="{StaticResource rect}"
                    Geometry2="{StaticResource ellipse}"
                    GeometryCombineMode="Xor" />
            </Path.Data>
        </Path>
        <TextBlock Grid.Row="2" Grid.Column="1">Xor</TextBlock>

        <!--  Exclude  -->
        <Path>
            <Path.Data>
                <CombinedGeometry
                    Geometry1="{StaticResource rect}"
                    Geometry2="{StaticResource ellipse}"
                    GeometryCombineMode="Exclude" />
            </Path.Data>
        </Path>
        <TextBlock Grid.Row="3" Grid.Column="1">Exclude</TextBlock>
    </UniformGrid>
</Window>

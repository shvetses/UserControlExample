<Window
    x:Class="Task_01.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Task_01"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="800"
    mc:Ignorable="d">
    <StackPanel>
        <Ellipse
            Width="200"
            Height="200"
            Fill="LightBlue"
            Stroke="Gray"
            StrokeDashArray="4 2"
            StrokeDashCap="Round"
            StrokeThickness="5" />
        <Rectangle
            Width="200"
            Height="100"
            Margin="10"
            Fill="LightPink"
            RadiusX="15"
            RadiusY="15" />
        <Line
            Stroke="Red"
            X1="100"
            X2="200"
            Y1="30"
            Y2="150" />
        <Polyline Points="100, 150, 200, 50, 300, 150" Stroke="Red" />
        <Polygon Fill="LightBlue" Points="100, 150, 200, 50, 300, 150" />
    </StackPanel>
</Window>
